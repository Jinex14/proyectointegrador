<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.integrador.proyecto.proyectointegrador.Datos02Activity">

    <TextView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Control de Calorias"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp"
        android:textSize="30dp"
        android:background="#1E88E5"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="false"
        android:gravity="center"
        android:textStyle="bold"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Talla en centimetros"
        android:inputType="number"
        app:met_baseColor="#717171"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="3"
        app:met_errorColor="#ff0000"
        app:met_primaryColor="#3149e6"
        app:met_helperText="Ingresar su talla"
        app:met_helperTextColor="#000000"
        android:id="@+id/txtTalla"
        android:layout_below="@+id/txtPeso"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Peso en kilos"
        android:inputType="numberDecimal"
        app:met_baseColor="#717171"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="6"
        app:met_errorColor="#ff0000"
        app:met_primaryColor="#3149e6"
        app:met_helperText="Ingresar su peso"
        app:met_helperTextColor="#000000"
        android:id="@+id/txtPeso"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/txtTalla"
        android:layout_alignStart="@+id/txtTalla" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:theme="@style/MyButton"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image03"
        android:src="@drawable/segunda"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp" />

</RelativeLayout>
