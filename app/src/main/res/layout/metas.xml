<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.integrador.proyecto.proyectointegrador.MetasActivity">

    <TextView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Control de Calorias"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp"
        android:textSize="30dp"
        android:background="#1E88E5"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="false"
        android:gravity="center"
        android:textStyle="bold"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/rgMetas">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganar Musculo"
            android:layout_marginTop="50dp"
            android:buttonTint="#1E88E5"
            android:id="@+id/rbGM"
            android:textSize="25dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:buttonTint="#1E88E5"
            android:layout_height="wrap_content"
            android:text="Mantener tu peso"
            android:id="@+id/rbMP"
            android:layout_marginTop="20dp"
            android:textSize="25dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:buttonTint="#1E88E5"
            android:layout_height="wrap_content"
            android:text="Perder Grasa"
            android:id="@+id/rbPG"
            android:layout_marginTop="20dp"
            android:textSize="25dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/buttonlounch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:theme="@style/MyButton"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image04"
        android:layout_above="@+id/rgMetas"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />

</RelativeLayout>
